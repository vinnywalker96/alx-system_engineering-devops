#!/usr/bin/env bash
# A bash script that installs nginx on an ubuntu machine.
# This scripts also configures the default webpage served to be "Hello World!"
sudo apt-get update -y

sudo apt-get install nginx -y

echo "Hello World!" | sudo tee /var/www/html/index.html > /dev/null

redirect_rule="\\\n\tlocation = /redirect_me {\n\t\t return 301 https://www.youtube.com;\n\t}\n"
nginx_config="/etc/nginx/sites-available/default"
sudo cp $nginx_config /etc/nginx/sites-available/default.backup
sudo sed -i "53i $redirect_rule" $nginx_config

sudo service nginx restart
