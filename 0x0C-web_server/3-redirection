#!/usr/bin/env bash
# A bash script that installs nginx on an ubuntu machine.
# This scripts also configures the default webpage served to be "Hello World!"
sudo apt-get -y update
sudo apt-get -y install nginx
sudo ufw allow 'Nginx HTTP'
sudo tee /etc/nginx/sites-available/redirect_me << EOF
server {
    listen 80;
    server_name youtube.com;

    location /redirect_me {
        return 301 https://youtube.com/new_page;
    }
}
EOF
sudo ln -s /etc/nginx/sites-available/redirect_me /etc/nginx/sites-enabled/
sudo service nginx start
