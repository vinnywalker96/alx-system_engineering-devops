#!/usr/bin/env bash
# configure haproxy load-balancing server
sudo apt-get install -y --no-install-recommends software-properties-common
sudo add-apt-repository -y ppa:vbernat/haproxy-2.7
sudo apt-get update -y
sudo apt-get install -y haproxy=2.7.\*
echo \
	"
frontend localnodes
	bind *:80
	mode http
	default_backend nodes
backend nodes
	mode http
	balance roundrobin
	server 105775-web-01 18.234.80.132
	server 105775-web-02 100.25.160.25" >> /etc/haproxy/haproxy.cfg

sudo service haproxy restart
