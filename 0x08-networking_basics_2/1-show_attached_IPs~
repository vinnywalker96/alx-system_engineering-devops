#!/usr/bin/env bash
# A Bash script that displays all active IPv4 IPs on the machine itâ€™s executed on.
# Get all network interfaces
interfaces=$(ifconfig | grep -E '^[a-zA-Z0-9]+' | awk '{print $1}')

# Loop through all interfaces
for interface in $interfaces
do
  # Get the IPv4 address for the current interface
  ipv4=$(ifconfig $interface | grep -Eo 'inet (addr:)?([0-9]*\.){3}[0-9]*' | grep -Eo '([0-9]*\.){3}[0-9]*')
  
  # If the interface has an IPv4 address, print it
  if [ -n "$ipv4" ]; then
    echo "$interface: $ipv4"
  fi
done
